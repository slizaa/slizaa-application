type StructureDatabase {

    identifier: ID!
}

input MvnCoordinate {

    # the group id
    groupId: String!

    # the artifact id
    artifactId: String!

    # the version
    version: String!
}

# The Query type
extend type Query {

    structureDatabases: [StructureDatabase]!
}

# The Mutation type
extend type Mutation {

    newStructureDatabase(identifier: ID!): StructureDatabase

    setMvnBasedContentDefinition(identifier: ID!, coords: [MvnCoordinate]!): [MvnCoordinate]!
}
